<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>default</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<!-- Local files -->
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/../../..</directory>
			<includes>
				<include>LICENSE</include>
				<include>NOTICE.txt</include>
				<include>README.md</include>
			</includes>
			<outputDirectory>.</outputDirectory>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>biz.webgate.poi4xpages:biz.webgate.updatesite-designer.poi</include>
			</includes>
			
			<binaries>
				<outputDirectory>UpdateSite</outputDirectory>
				<unpack>true</unpack>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>biz.webgate.dominoext.poi</include>
			</includes>
			<binaries>
				<attachmentClassifier>javadoc</attachmentClassifier>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>/apidocs/${module.artifactId}</outputDirectory>
				<unpack>true</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
